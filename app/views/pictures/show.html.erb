<section class="show_picture">
  <div class="big_picture">
    <%= image_tag(@picture.url) %>
    <h2>"<%= @picture.title %>"</h2>
    <h3>- <%= @picture.artist %></h3>
  </div>
  <p><%= link_to("Edit", "/pictures/#{@picture.id}/edit") %> | <%= link_to("Delete", "/pictures/#{@picture.id}", method: :delete, data: {confirm: "Are you sure you want to delete this picture?"}) %></p>
</section>
