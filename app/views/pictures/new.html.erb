<section class="add-picture">
  <% if @picture.errors.messages.length > 0  %>
    <div class="errors">
      <% @picture.errors.messages.each do |attribute, errors| %>
        <p><%= attribute.capitalize %> <%= errors[0].capitalize %></p>
      <% end %>
    </div>
  <% end %>

  <h1>Add a picture</h1>
  
  <%= link_to("Back to Pictures", "/pictures") %>
  <%= form_for(@picture) do |f| %>
  <p>
    <%= f.label :artist %><br>
    <%= f.text_field :artist %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
  <% end %>
</section>
